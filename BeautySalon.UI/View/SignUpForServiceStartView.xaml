<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="BeautySalon.UI.View.SignUpForServiceStartView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BeautySalon.UI.CustomControl"
    xmlns:viewModels="clr-namespace:BeautySalon.UI.ViewModel"
    Title="Услуги"
    Padding="15"
    x:DataType="viewModels:SignUpForServiceStartViewModel"
    Shell.TabBarIsVisible="False">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Далее" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout BindableLayout.ItemsSource="{Binding Services}">
            <BindableLayout.ItemTemplate>
                <DataTemplate>
                    <controls:ServiceItem>
                        <controls:ServiceItem.GestureRecognizers>
                            <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                        </controls:ServiceItem.GestureRecognizers>
                        <controls:ServiceItem.TailView>
                            <CheckBox />
                        </controls:ServiceItem.TailView>
                    </controls:ServiceItem>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>