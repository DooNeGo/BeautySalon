<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="BeautySalon.UI.CustomControl.MenuItem"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="5"
    ColumnDefinitions="Auto, *"
    ColumnSpacing="10"
    RowDefinitions="Auto,Auto">

    <ContentPresenter
        x:Name="Head"
        Grid.RowSpan="2"
        Grid.Column="0"
        HorizontalOptions="Center"
        VerticalOptions="Center" />

    <Label
        x:Name="TitleLabel"
        Grid.Row="0"
        Grid.Column="1"
        FontSize="15"
        VerticalOptions="Center" />

    <Label
        x:Name="DetailLabel"
        Grid.Row="1"
        Grid.Column="1"
        FontSize="13"
        TextColor="{StaticResource Gray400}"
        VerticalOptions="Center" />

    <ContentPresenter
        x:Name="Tail"
        Grid.RowSpan="2"
        Grid.Column="1"
        HorizontalOptions="End"
        VerticalOptions="Center" />
</Grid>