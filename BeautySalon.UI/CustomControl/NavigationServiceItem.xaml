<?xml version="1.0" encoding="utf-8" ?>
<controls:ServiceItem
    x:Class="BeautySalon.UI.CustomControl.NavigationServiceItem"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:BeautySalon.UI.CustomControl"
    xmlns:domain="clr-namespace:BeautySalon.Domain;assembly=BeautySalon.Domain"
    x:DataType="domain:Service">

    <controls:ServiceItem.GestureRecognizers>
        <TapGestureRecognizer Tapped="TapGestureRecognizer_OnTapped" />
    </controls:ServiceItem.GestureRecognizers>

    <controls:ServiceItem.TailView>
        <Image
            Grid.RowSpan="2"
            Grid.Column="1"
            HeightRequest="15"
            HorizontalOptions="End"
            Source="angle_right"
            VerticalOptions="Center" />
    </controls:ServiceItem.TailView>
</controls:ServiceItem>
