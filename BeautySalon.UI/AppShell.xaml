<?xml version="1.0" encoding="utf-8" ?>

<Shell
    x:Class="BeautySalon.UI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:BeautySalon.UI.View"
    FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Главная"
            ContentTemplate="{DataTemplate view:MainView}"
            Icon="house.svg" />
        <ShellContent
            Title="Записи"
            ContentTemplate="{DataTemplate view:AppointmentsView}"
            Icon="book_open.svg" />
    </TabBar>
</Shell>